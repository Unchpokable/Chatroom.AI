{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build",
                "-G", "Visual Studio 17 2022",
                "-A", "x64"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure CMake project"
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"],
            "detail": "Build project in Debug configuration",
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Release"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"],
            "detail": "Build project in Release configuration",
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--target", "clean"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        },
        {
            "label": "CMake: Rebuild Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Debug",
                "--clean-first"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"],
            "detail": "Clean and rebuild in Debug configuration",
            "dependsOn": "CMake: Configure"
        }
    ]
}
